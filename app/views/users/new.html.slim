= render '/header'

div style='padding: 0 1rem 0 1rem;'
  = form_for(:user, url: users_path, html: { class: 'form-format1' }) do |f|
    h4 class='fw-bold pt-5 pb-5' ユーザー作成フォーム
    div class='form-floating mb-3'
      = f.text_field :name, class: 'form-control', id: 'floatingInput', placeholder: 'Name', required: true
      = f.label 'Name', for: 'floatingInput'
    div class='form-floating mb-3'
      = f.email_field :email, class: 'form-control', id: 'floatingInput', placeholder: 'Email', required: true
      = f.label 'Email', for: 'floatingInput'
    div class='form-floating mb-3' style='display: flex; align-items: center;'
      = f.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: 'Password', required: true
      = f.label :password, for: 'floatingPassword'
      span id='buttonEye1' class='bi bi-eye-fill px-2' name='icon' style='font-size: 1rem; position: absolute; right: 0.7rem;' onClick='handleClick1()'
    div class='form-floating mb-5' style='display: flex; align-items: center;'
      = f.password_field :password_confirmation, class: 'form-control', id: 'floatingPasswordConfirmation', placeholder: 'PasswordConfirmation', required: true
      = f.label :password_confirmation, for: 'floatingPasswordConfirmation'
      span id='buttonEye2' class='bi bi-eye-fill px-2' name='icon' style='font-size: 1rem; position: absolute; right: 0.7rem;' onClick='handleClick2()'
    = f.submit '登録する', class: 'btn btn-lg btn-primary'

  javascript:
    const handleClick1 = () => {
      const txtPass1 = document.getElementById("floatingPassword");
      const btnEye1 = document.getElementById("buttonEye1");
      if (txtPass1.type === "text") {
        txtPass1.type = "password";
        btnEye1.className = "bi bi-eye-fill px-2";
      } else {
        txtPass1.type = "text";
        btnEye1.className = "bi bi-eye-slash-fill px-2";
      }
    }
    const handleClick2 = () => {
      const txtPass2 = document.getElementById("floatingPasswordConfirmation");
      const btnEye2 = document.getElementById("buttonEye2");
      if (txtPass2.type === "text") {
        txtPass2.type = "password";
        btnEye2.className = "bi bi-eye-fill px-2";
      } else {
        txtPass2.type = "text";
        btnEye2.className = "bi bi-eye-slash-fill px-2";
      }
    }
